<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_size_5">

    <ImageView
        android:id="@+id/img_drug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_drugs" />

    <TextView
        android:id="@+id/txt_medicine_name"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:layout_toStartOf="@+id/img_right_arrow"
        android:layout_toLeftOf="@+id/img_right_arrow"
        android:layout_toEndOf="@+id/img_drug"
        android:layout_toRightOf="@+id/img_drug"
        android:padding="@dimen/dimen_size_5"
        android:text="XXXXXXXXXX"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/txt_translated"
        style="@style/TextStyle"
        android:layout_below="@+id/txt_medicine_name"
        android:layout_margin="@dimen/dimen_size_10"
        android:layout_toStartOf="@+id/img_right_arrow"
        android:layout_toLeftOf="@+id/img_right_arrow"
        android:text="@string/translated"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/img_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_size_20"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:src="@drawable/ic_right_arrow" />

</RelativeLayout>